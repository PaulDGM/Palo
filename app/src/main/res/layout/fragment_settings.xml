<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorcan.palo.SettingsFragment">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        app:srcCompat="@drawable/einstellungen"
        android:contentDescription="@string/settings_header_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_header"
        android:background="@color/colorScrollview"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_change_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/change_language"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_german"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/german"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rb_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textSize="18sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_select_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/select_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_azure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_azure"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_azure"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_blue"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_blue"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_cyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_cyan"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_cyan"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_green"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_green"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_magenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_magenta"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_magenta"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_orange"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_orange"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_red"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_red"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_rose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_rose"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_rose"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_violet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_violet"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_violet"
                        android:focusable="true" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/hue_yellow"
                        app:fabSize="mini"
                        app:srcCompat="@color/hue_yellow"
                        android:focusable="true" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_change_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/change"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/colorFooter">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/palo_version"
            android:textAlignment="textStart"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:text="@string/copyright"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

    </LinearLayout>

</RelativeLayout>
